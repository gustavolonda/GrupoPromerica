package com.example.myweather.openweathermap.domains.services;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.beans.factory.annotation.Value;
import org.springframework.boot.ApplicationArguments;
import org.springframework.boot.ApplicationRunner;
import org.springframework.stereotype.Component;

import com.example.myweather.openweathermap.domains.data.OpenWeatherMapResponse;

@Component
public class RunTest implements ApplicationRunner {
	@Value("${open-weather-map.api-key}")
	private  String apiKeyString;
	@Autowired
	private  OpenWeatherMapService openWeatherMapService;
    @Override
    public void run(ApplicationArguments applicationArguments) throws Exception {

        try {
        	OpenWeatherMapResponse response = openWeatherMapService.currentWeather(44.34,10.99,apiKeyString);
        	System.out.println(response.toString());
		} catch (Exception e) {
			e.fillInStackTrace();
		}

    }
}
